<main class="yield-container">
    <p class="weather"></p>

    <div class="container-for-todo">
        <div class="panel panelOne">
            <button class="accordionOne"><span>To Dos</span></button>
            <% @todos.each do |todo| %>
                <% if todo.complete == 0 %>    
                    <div class="to-do-item">
                        <h1><%= Date::MONTHNAMES[todo.task.due_date.month][0..2] %>: <%= todo.task.name %></h1>
                        <h2><%= todo.plant.common_name %></h2>
                        <p class="task_complete_button" name="todo_id" value="<%= todo.id %>">ðŸŒ³</p>
                    </div>
                <% end %>
            <% end %>
        </div>
        <div class="panel panelTwo closed">
            <button class="accordionTwo closed"><span>Done</span></button>
            <% @todos.each do |todo| %>
                <% if todo.complete == 1 %>    
                    <div class="to-do-item">
                        <h1><%= Date::MONTHNAMES[todo.task.due_date.month][0..2] %>: <%= todo.task.name %></h1>
                        <h2><%= todo.plant.common_name %></h2>
                        <p class="task_complete_button" name="todo_id" value="<%= todo.id %>">ðŸŒ³</p>
                    </div>
                <% end %>
            <% end %>
        </div>
    </div>
    <script src="/javascripts/todo.js"></script>
</main>
